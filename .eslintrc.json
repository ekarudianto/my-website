{
  "plugins": [
      "react"
  ],
  "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
      "es6":     true,
      "browser": true,
      "node":    true,
      "mocha":   true
  },
  "extends": [
      "airbnb-base",
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "rules": {
    "no-console": "off",
    "import/no-unresolved": [
        "error",
        {
          "ignore": [ "@" ]
        }
    ],
    "import/extensions": [
        "error",
        "never",
        {
            "js": "never",
            "json": "always"
        }
    ]
  }
}
